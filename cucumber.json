{
  "default": {
    "timeout": 150000,
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "paths": ["src/features/*.feature"],
    "publishQuiet": false,
    "dryRun": false,

    "require": ["src/step-definitions/*.ts", "src/support/hooks.ts"],
    "requireModule": ["ts-node/register"],
    "format": [
      "summary",
      "progress-bar",
      "json:reports/cucumber-report.json"
      
    ]
  }
}
